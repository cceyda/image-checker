{
   "version":1,
   "disable_existing_loggers":false,
   "formatters":{
      "error":{
         "format":"Bad file: %(message)s"
      },
      "standard":{
         "format":"%(asctime)s [%(levelname)s] %(name)s: %(message)s"
      }
   },
   "handlers":{
      "stdout":{
         "class":"logging.StreamHandler",
         "formatter":"standard",
         "stream":"ext://sys.stdout"
      },
      "error_file_handler":{
         "level":"ERROR",
         "formatter":"error",
         "class":"logging.FileHandler",
         "filename":"error.log",
         "mode":"w"
      }
   },
   "loggers":{
      "":{
         "handlers":[
            "stdout"
         ],
         "level":"DEBUG",
         "propagate":true
      },
      "image_checker":{
         "handlers":[
            "stdout"
         ],
         "level":"INFO",
         "propagate":false
      },
      "image_checker.errors":{
         "handlers":[
            "error_file_handler"
         ],
         "level":"ERROR",
         "propagate":false
      }
   }
}